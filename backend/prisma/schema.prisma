// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  accountNumber      String          @id @unique
  firstname          String
  lastname           String
  solde              Decimal         @default(0)
  card               Card?
  bankOperationsFrom BankOperation[] @relation("UserFromRealation")
  bankOperationsTo   BankOperation[] @relation("UserToRealation")
}

model BankOperation {
  id           Int      @id @unique @default(autoincrement())
  type         String
  userFrom     String   @db.VarChar(11)
  userTo       String   @db.VarChar(11)
  date         DateTime @default(now())
  amount       Decimal
  userFromUser User     @relation("UserFromRealation", fields: [userFrom], references: [accountNumber])
  userToUser   User     @relation("UserToRealation", fields: [userTo], references: [accountNumber])
}

model Card {
  cardNumber        String @id @unique
  pin               String @default("1234") @db.VarChar(4)
  attempt           Int    @default(4)
  user              User   @relation(fields: [userAccountNumber], references: [accountNumber])
  userAccountNumber String @unique
}
